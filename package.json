  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/lib/(.*)$": "<rootDir>/lib/$1",
      "^@/models/(.*)$": "<rootDir>/models/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ]
  }
