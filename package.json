    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "eslint": "8.47.0",
    "eslint-config-next": "13.4.19",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.4.4",
    "next": "13.4.19",
    "next-auth": "^4.23.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.15",
    "@testing-library/jest-dom": "^6.1.3",
